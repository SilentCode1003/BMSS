
<!-- Begin PCreated by Content -->
<div class="container-fluid">
    <!-- Content Row -->
    <div class="toggle-view">
        <div class="row mb-2">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header py-3 header-bg">
                        <h6 class="m-0 font-weight-bold">Production</h6>
                    </div>
                    <div class="card-body extend">
                        <div class="row mb-1">
                            <div class="col-12">
                                <div class="row justify-content-end">
                                    <div class="col-md-4 mb-1">
                                        <select class="form-control text-center loading-border" name="productlists" id="productlists">
                                            <option value="">-- Select here Product --</option>
                                        </select> 
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2">Quantity</span>
                                            </div>
                                            <input id="quantity" name="quantity" type="number" class="form-control" placeholder="Enter Quantity" aria-label="orderdate" aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mr-5 ml-5">
                                    <div class="table-responsive scrollable-table-container-sm table-size">
                                        <table class="table table-bordered custom-mobile-table" id="components-datatable" width="100%" cellspacing="10">
                                            <thead class="table-header">
                                                <tr>
                                                    <th class = "col-1">Material ID</th> 
                                                    <th class = "col-2">Material Name</th> 
                                                    <th class = "col-1">Cost</th>    
                                                    <th class = "col-1">Units</th>      
                                                    <th class = "col-1">Quantity</th> 
                                                    <th class = "col-1">Current Stock</th> 
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <span>Max Quantity can produce based on stock: <span id="max-quantity"></span></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">Start Date</span>
                                    </div>
                                    <input id="startdate" name="startdate" type="date" class="form-control" placeholder="Enter POS Name" aria-label="orderdate" aria-describedby="basic-addon1">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">End Date</span>
                                    </div>
                                    <input id="enddate" name="enddate" type="date" class="form-control" placeholder="Enter POS Name" aria-label="orderdate" aria-describedby="basic-addon1">
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-8">
                                <select class="form-control text-center loading-border" name="supervisor" id="supervisor">
                                    <option value="">-- Select Supervisor --</option>
                                </select> 
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">Production Line</span>
                                    </div>
                                    <input id="productionline" name="productionline" type="text" class="form-control" placeholder="Enter Production Line" aria-label="productionlinename" aria-describedby="basic-addon1">
                                </div>
                            </div>
                            <div class="col-md-4 align mt-1">
                                <button id="addBtn" name="addBtn" class="btn btn-sm btn-outline-inventory shadow-sm w-50">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    Add
                                </button>
                            </div>
                        </div>
                    </div>      
                </div>
            </div>
        </div>
    </div>

<!-- DataTales Example -->
<div class="card shadow mb-4 table-size">
    <div class="progress progress-sm mb-2">
        <div class="progress-bar" role="progressbar" style="width: 0%"
            aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="card-header py-3 header-bg">
        <div class="row">
            <div class="col-md-4">
                <div class="row mb-2">
                    <button id="toggleButton" name="toggleButton" class=" ml-3 btn btn-circle btn-outline-inventory ">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    <h6 class="mt-2 ml-3 font-weight-bold table-title">Production Data</h6>
                </div>   
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small"
                        placeholder="Search for..." aria-label="Search"
                        aria-describedby="basic-addon2" id="search-input">
                    <div class="input-group-append">
                        <button class="btn sis-btn-color" type="button" id="search-button">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive scrollable-table-container">
            <table class="table table-bordered custom-mobile-table" id="production-datatable" width="100%" cellspacing="10">
                <thead class="table-header">
                    <tr>
                        <th class = "col-1">Production ID</th>
                        <th class = "col-1">Product</th>
                        <th class = "col-1">Start Date</th>
                        <th class = "col-1">End Date</th>
                        <th class = "col-1">Status</th>
                        <th class = "col-1">Quantity</th>
                        <th class = "col-1">Production Line</th>
                        <th class = "col-2">Super Visor</th>
                        <th class = "col-2">Notes</th>      
                        <th class = "col-1">Action</th>          
                    </tr>
                </thead>          
                <tbody>
                </tbody>
            </table>
        </div>
        
    </div>
</div>