<script>
    $(document).ready(function () {
        let paymentcode = "";
        let status = "";
        let currentpaymentName = "";
        reloadTableData();

        $('#payment-table tbody').on('click', 'tr', function () {
            var dataRow = [];
            $(this).closest('tr').find('td').each(function () {
                dataRow.push($(this).text());
            });
            console.log(dataRow);
            paymentcode = dataRow[0];
            currentpaymentName = dataRow[1];
            status = dataRow[4];
        }) 

        $(document).on('click', '#editBtn', function(){
            $('#paymentcode').val(paymentcode);
            $('#currentpaymentName').val(currentpaymentName);
            $('#paymentModal').modal('show');
            console.log(paymentcode);
        })
      
        $(document).on('click', '#addBtn', function () {
            let paymentname = $('#paymentname').val();

            var message = "";

            if (paymentname == '') { message += 'payment Name' }

            if (message != '') {
                warning('Required', `Please fill up ${message}`);
            }
            else { 
                $.ajax({
                    type: 'POST',
                    url: '/payment/save',
                    data: {
                        paymentname: paymentname,
                    },
                    success: function (result) {
                        if (result.msg == 'success') {
                            reloadTableData()
                            success('Saved', 'Successfully')
                            $('#paymentname').val('');
                        }

                        if (result.msg == 'exist') {
                            warning('Exist', `${paymentname} already exist!`);
                            $('#paymentname').val('');
                        }

                    },
                    error: function (err) {
                        errormsg(err);
                    }
                })
            }
        })

        function filterTableRows() {
            const searchQuery = $('#search-input').val().trim().toLowerCase();
            let foundMatches = false;

            $('#no-match-row').remove();

            $('#payment-table tbody tr').each(function() {
                const rowData = $(this).text().toLowerCase();
                if (rowData.includes(searchQuery)) {
                    $(this).show();
                    foundMatches = true;
                } else {
                    $(this).hide();
                }
            });

            if (!foundMatches) {
                const noMatchRow = $('<tr>').append(
                    $('<td>', {
                        colspan: 9,
                        class: 'text-center',
                        text: 'No Data Matched'
                    })
                );
                $('#payment-table tbody').append(noMatchRow);
                noMatchRow.attr('id', 'no-match-row');
            }
        }

        $('#search-input').on('input', filterTableRows);

        function populatepaymentTable(data) {
            console.log(data);
            const tableBody = $('#payment-table tbody');
            tableBody.empty();

            if (data.length === 0) {
                const tr = $('<tr>').append($('<td>', {
                    colspan: 6,
                    class: 'text-center',
                    text: 'No Data Matched'
                }));
                tableBody.append(tr);
            } else {
                data.forEach(item => {
                    let action = '';
                    if (item.status === 'ACTIVE') {
                        action = `
                            <button id="editBtn" class="btn btn-outline-inventory-lighter shadow-sm w-100" name="editBtn" data-toggle="modal" data-target="#paymentModal">EDIT</button>
                            <button id="inactiveBtn" class="btn btn-outline-inventory-lighter shadow-sm w-100 mt-1" name="inactiveBtn">INACTIVE</button>`;
                    } else if (item.status === 'INACTIVE') {
                        action = `
                            <button id="editBtn" class="btn btn-outline-inventory-lighter shadow-sm w-100" name="editBtn" data-toggle="modal" data-target="#paymentModal">EDIT</button>
                            <button id="activeBtn" class="btn btn-outline-inventory-lighter shadow-sm w-100 mt-1" name="activeBtn">ACTIVE</button>`;
                    }

                    const tr = $('<tr>').append(
                        $('<td>', { text: item.paymentid, 'data-label': 'payment Code', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.paymentname, 'data-label': 'payment Name', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.createdby, 'data-label': 'Created By', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.createddate, 'data-label': 'Created Date', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.status, 'data-label': 'Status', class: 'custom-mobile-align' }),
                        $('<td>', { html: action, 'data-label': 'Action', class: '' })
                    );
                    tableBody.append(tr);
                });
            }
        }

        function reloadTableData() {
            $(".progress").hide();
            $(".progress").slideDown();

            $.ajax({
                url: '/payment/load',
                method: 'GET',
                dataType: 'json',
                xhrFields: {
                    onprogress: function (e) {
                        if (e.lengthComputable) {
                            var percentComplete = (e.loaded / e.total) * 100;
                            $(".progress-bar").css("width", percentComplete + "%");
                        }
                    }
                },
                success: function (data) {
                    setTimeout(function () {
                        $(".progress").slideUp(function() {
                            if (data.msg === 'success') {
                                populatepaymentTable(data.data);
                            } else {
                                console.error(data.msg);
                            }
                        })
                    }, 1000);
                },
                error: function (error) {
                    console.error(error);
                }
            });
        }

        $(document).on('click', '#activeBtn', function(){
            console.log(paymentcode);
            console.log(status);
            $.ajax({
                type: 'POST',
                url: '/payment/status',
                data: {
                    status: status,
                    paymentcode: paymentcode,
                },
                success: function (result) {
                    if (result.msg == 'success') {
                        reloadTableData();
                        success('Saved', 'Successfully')
                    }

                    if (result.msg == 'notexist') {
                        warning(`${paymentcode} does not exist!`);
                    }

                },
                error: function (err) {
                    errormsg(err);
                }
            })
        });

        $(document).on('click', '#inactiveBtn', function(){
            console.log(paymentcode);
            console.log(status);
            $.ajax({
                type: 'POST',
                url: '/payment/status',
                data: {
                    status: status,
                    paymentcode: paymentcode,
                },
                success: function (result) {
                    if (result.msg == 'success') {
                        reloadTableData();
                        success('Saved', 'Successfully')
                    }

                    if (result.msg == 'notexist') {
                        warning(`${paymentcode} does not exist!`);
                    }

                },
                error: function (err) {
                    errormsg(err);
                }
            })
        });

        $(document).on('click', '#updateBtn', function () {
            let paymentnamemodal = $('#paymentnamemodal').val();
            let paymentcode = $('#paymentcode').val();

            var message = "";

            if (paymentnamemodal == '') { message += 'payment Code ' }

            if (message != '') {
                warning('Required', `Please fill up ${message}`);
            }
            else {
                $.ajax({
                    type: 'POST',
                    url: '/payment/edit',
                    data: {
                        paymentnamemodal: paymentnamemodal,
                        paymentcode: paymentcode,
                    },
                    success: function (result) {
                        if (result.msg == 'success') {
                            reloadTableData();
                            $('#paymentModal').modal('hide');
                            $('#paymentnamemodal').val('');
                            success('Saved', 'Successfully')
                        }

                        if (result.msg == 'duplicate') {
                            warning('Duplicate', `${paymentnamemodal} already exist!`);
                        }

                    },
                    error: function (err) {
                        errormsg(err);
                    }
                })
            }
        })

    })
</script>