    <div class="card-header py-3 header-bg">
        <h6 class="m-0 font-weight-bold table-title text-white">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive scrollable-table-container">
            <table class="table table-bordered" id="branch-dataTable" width="100%" cellspacing="10">
                <thead class="table-header">
                    <tr>
                        <th class = "col-1">Branch ID</th>
                        <th class = "col-1">Branch Name</th>
                        <th class = "col-1">TIN</th>
                        <th class = "col-1">Address</th>
                        <th class = "col-1">Logo</th>
                        <th class = "col-1">Created by</th>
                        <th class = "col-1">Created date</th>
                        <th class = "col-1">Status</th>
                        <th class = "col-1">Action</th>               
                    </tr>
                </thead>
                    
                <tbody>
                </tbody>
            </table>
        </div>
        
    </div>
</div>