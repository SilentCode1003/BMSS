<script>
  $(document).ready(function () {
    let discountid = "";
    let status = "";

    LoadTable();

    $("#discount-dataTable tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      discountid = dataRow[0];
      status = dataRow[4];
    });

    $(document).on("click", "#editBtn", function () {
      $("#discountidmodal").val(discountid);
      $("#discountModal").modal("show");
    });

    $(document).on("click", "#addBtn", function () {
      let discountname = $("#discountname").val();
      let description = $("#description").val();
      let rate = $("#rate").val();
      var message = "";

      if (discountname == "") {
        message += "Discount Name ";
      }
      if (description == "") {
        message += "Description ";
      }
      if (rate == "") {
        message += "Rate ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/discount/save",
          data: {
            discountname: discountname,
            description: description,
            rate: rate,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              $("#discountname").val("");
              $("#description").val("");
              $("#rate").val("");
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              $("#discountname").val("");
              warning("Exist", `${discountname} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    $(document).on("click", "#activeBtn", function () {
      console.log(discountid);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/discount/status",
        data: {
          status: status,
          discountid: discountid,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${discountid} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $(document).on("click", "#inactiveBtn", function () {
      console.log(discountid);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/discount/status",
        data: {
          status: status,
          discountid: discountid,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${discountid} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    function populatediscountTable(data) {
      const tableBody = $("#discount-dataTable tbody");
      tableBody.empty();

      if (data.length === 0) {
        const tr = $("<tr>").append(
          $("<td>", {
            colspan: 8,
            class: "text-center",
            text: "No Data Matched",
          })
        );
        tableBody.append(tr);
      } else {
        data.forEach((item) => {
          let action = "";
          if (item.status === "ACTIVE") {
            action = `
                            <button id="editBtn" class="btn btn-outline-inventory shadow-sm w-100" name="editBtn" data-toggle="modal" data-target="#accessModal">EDIT</button>
                            <button id="inactiveBtn" class="btn btn-outline-inventory shadow-sm w-100 mt-1" name="inactiveBtn">INACTIVE</button>`;
          } else if (item.status === "INACTIVE") {
            action = `
                            <button id="editBtn" class="btn btn-outline-inventory shadow-sm w-100" name="editBtn" data-toggle="modal" data-target="#accessModal">EDIT</button>
                            <button id="activeBtn" class="btn btn-outline-inventory shadow-sm w-100 mt-1" name="activeBtn">ACTIVE</button>`;
          }

          const tr = $("<tr>").append(
            $("<td>", {
              text: item.discountid,
              "data-label": "Vender ID",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.name,
              "data-label": "discount Name",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.description,
              "data-label": "Contact Person",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.rate,
              "data-label": "Email",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.status,
              "data-label": "Status",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.createdby,
              "data-label": "Created By",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.createddate,
              "data-label": "Created Date",
              class: "custom-mobile-align",
            }),
            $("<td>", { html: action, "data-label": "Action" })
          );

          tableBody.append(tr);
        });
      }
    }

    function LoadTable() {
      $(".progress").hide();
      $(".progress").slideDown();

      $.ajax({
        url: "/discount/load",
        method: "GET",
        dataType: "json",
        xhrFields: {
          onprogress: function (e) {
            if (e.lengthComputable) {
              var percentComplete = (e.loaded / e.total) * 100;
              $(".progress-bar").css("width", percentComplete + "%");
            }
          },
        },
        success: function (data) {
          setTimeout(function () {
            $(".progress").slideUp(function () {
              if (data.msg === "success") {
                populatediscountTable(data.data);
              } else {
                console.error(data.msg);
              }
            });
          }, 1000);
        },
        error: function (error) {
          console.error(error);
        },
      });
    }

    $(document).on("click", "#updateBtn", function () {
      let discountname = $("#discountnamemodal").val();
      let discountid = $("#discountidmodal").val();
      let description = $("#descriptionmodal").val();
      let rate = $("#ratemodal").val();

      var message = "";

      if (discountname == "" && discountid == "" && rate == "") {
        message += "Fill up atleast 1 input field before updating";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/discount/edit",
          data: {
            discountname: discountname,
            discountid: discountid,
            description: description,
            rate: rate,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              $("#discountModal").modal("hide");
              $("#discountnamemodal").val("");
              $("#discountidmodal").val("");
              $("#descriptionmodal").val("");
              $("#ratemodal").val("");
              success("Saved", "Successfully");
            }

            if (result.msg == "duplicate") {
              warning("Duplicate", `${discountname} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    function filterTableRows() {
      const searchQuery = $("#search-input").val().trim().toLowerCase();
      let foundMatches = false;

      $("#no-match-row").remove();

      $("#discount-dataTable tbody tr").each(function () {
        const rowData = $(this).text().toLowerCase();
        if (rowData.includes(searchQuery)) {
          $(this).show();
          foundMatches = true;
        } else {
          $(this).hide();
        }
      });

      if (!foundMatches) {
        const noMatchRow = $("<tr>").append(
          $("<td>", {
            colspan: 9,
            class: "text-center",
            text: "No Data Matched",
          })
        );
        $("#discount-dataTable tbody").append(noMatchRow);
        noMatchRow.attr("id", "no-match-row");
      }
    }

    $("#search-input").on("input", filterTableRows);

  });

</script>
