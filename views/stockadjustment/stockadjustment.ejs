<div class="container-fluid">
    <div class="toggle-view">
        <div class="row mb-2">
            <div class="col-12">
                <div class="card">
                    <div class="card-header header-bg">
                        <div class="row">
                            <div class="col">
                                <h6 class="m-0 font-weight-bold mt-2">Add Products Quantity</h6>
                            </div>
                        </div>
                    </div>
                    <div class="card-body extend">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md">
                                        <div class="customdropdown">
                                            <div class="select selectbranch">
                                                <span id="selectedbranch">Select Branch</span>
                                                <i class="fa fa-chevron-left"></i>
                                            </div>
                                            <input type="hidden" name="branchfilter" id="branchfilter">
                                            <ul class="customdropdown-menu branchlist">
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <!-- <div class="row mt-2">
                                    <div class="col-md">
                                        <div class="customdropdown">
                                            <div class="select selectadjustmenttype">
                                                <span id="selectedadjustmenttype">Select Adjustment Type</span>
                                                <i class="fa fa-chevron-left"></i>
                                            </div>
                                            <input type="hidden" name="adjustmenttypefilter" id="adjustmenttypefilter">
                                            <ul class="customdropdown-menu adjustmenttypelist">
                                            </ul>
                                        </div>
                                    </div>
                                </div> -->
                                <div class="row mt-2">
                                    <div class="col-md">
                                        <div class="customdropdown">
                                            <div class="select selectreason">
                                                <span id="selectedreason">Select Reason</span>
                                                <i class="fa fa-chevron-left"></i>
                                            </div>
                                            <input type="hidden" name="reasonfilter" id="reasonfilter">
                                            <ul class="customdropdown-menu reasonlist">
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md">
                                        <textarea class="form-control" id="details" placeholder="Add Details" rows="6"></textarea>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md">
                                        <textarea class="form-control" id="notes" placeholder="Add Notes" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="table-responsive table-size-package border">
                                    <table class="table custom-mobile-table" id="product-datatable"
                                        width="100%" cellspacing="10">
                                        <thead class="table-header">
                                            <tr>
                                                <th class="col-1 text-left">Product</th>
                                                <th class="col-1 text-left">Product ID</th>
                                                <th class="col-1 w-10 text-left">Quantity</th>
                                                <th class="col-1 text-left">Stocks</th>
                                                <th class="w-10"></th>
                                            </tr> 
                                        </thead>
                                        
                                        <tbody>
                                            <tr>
                                                <td colspan="5">Select Branch to Display Selection</td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                           
                        </div>
    
                        <div class="row justify-content-end mt-1">
                            <div class="col-md-4 text-right">
                                <button type="button" id="adjustBtn" class="btn btn-outline-inventory w-40">
                                    <span id="btnIcon"><i class="fa fa-plus" aria-hidden="true"></i> Adjust</span>
                                    <span id="btnSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- cardbody-size-710 -->
    <div class="card shadow mb-2">
        <div class="progress progress-sm mb-2">
            <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
            </div>
        </div>
        <div class="card-header py-3 header-bg">
            <div class="row">
                <div class="col-md-3">
                    <div class="row mb-2">
                        <% if (accesstype === "Owner" || accesstype === "Manager") { %>
                        <button id="toggleButton" name="toggleButton"
                            class=" ml-3 btn btn-circle btn-outline-inventory ">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                        <% } %>
                        <h6 class="mt-2 ml-3 font-weight-bold table-title">Stock Adjustments</h6>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="row d-flex justify-content-end">
                        <div class="col-md-5 mb-1">
                            <div class="input-group">
                                <input autocomplete="off" type="text" class="form-control bg-light small"
                                    placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2"
                                    id="search-input">
                                <div class="input-group-append">
                                    <button class="btn sis-btn-color" type="button" id="search-button">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1 mb-1">
                            <button class="btn btn-outline-inventory w-100 text-center" id="convertopdf">
                                <i class="fas fa-download fa-sm"></i> <span class="web-hidden">Download to PDF</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive border" style="height: 720px;">
                        <table class="table table-bordered custom-mobile-table" id="adjustment-table" width="100%"
                            cellspacing="10">
                            <thead class="table-header text-black">
                                <tr>
                                    <th class="text-left h5 col-1">ID</th>
                                    <th class="text-left h5 col-2">Branch</th>
                                    <th class="text-left h5 col-1">Branch ID</th>
                                    <th class="text-left h5">Created Date</th>
                                    <th class="text-left h5">Created By</th>
                                    <th class="text-left h5 col-1">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card inventory-card">
                        <div class="row ml-2 mt-3">
                            <div class="col-md-6">
                                <span class="h5 label-title">
                                    Type: 
                                </span>
                                <span class="h5 text-capitalize" id="adjustment-type">No Data</span>
                            </div>
                            <div class="col-md-6">
                                <span class="h5 label-title">
                                    Status: 
                                </span>
                                <span class="h5 text-capitalize" id="adjustment-status">No Data</span>
                            </div>
                        </div>
                        <div class="row ml-2 mt-3">
                            <div class="col-md-6">
                                <span class="h5 label-title">
                                    Branch:
                                </span>
                                <span class="h5 text-capitalize" id="adjustment-branch">No Data</span>
                            </div>
                            <div class="col-md-6">
                                <span class="h5 label-title">
                                    By:
                                </span>
                                <span class="h5 text-capitalize" id="adjustment-by">No Data</span>
                            </div>
                        </div>
                        <hr class="sidebar-divider"/>
                        <div id="product-details" style="height: 518px; overflow-y: auto; overflow-x: hidden;">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                   <span class="h5">Click a Row to Display Adjustment Details <br> Details</span>
                                </div>
                            </div>
                            
                        </div>
                        <hr class="sidebar-divider"/>
                        <div class="row mx-2" id="adjustment-options">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

