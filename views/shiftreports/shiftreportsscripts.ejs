<script>
    $(document).ready(function () {
        let categorycode = "";
        let status = "";

        LoadTable();

        $('#category-dataTable tbody').on('click', 'tr', function () {
        var dataRow = [];
        $(this).closest('tr').find('td').each(function () {
            dataRow.push($(this).text());
        });
        console.log(dataRow);
        categorycode = dataRow[0];
        status = dataRow[4];
        })

        $(document).on('click', '#addBtn', function () {
            let categoryname = $('#categoryname').val();
            var message = "";
 
            if (categoryname == '') { message += 'Category Name ' }

            if (message != '') {
                warning('Required', `Please fill up ${message}`);
            }
            else {
                $.ajax({
                    type: 'POST',
                    url: '/category/save',
                    data: {
                        categoryname: categoryname,
                    },
                    success: function (result) {
                        if (result.msg == 'success') {
                            LoadTable();
                            success('Saved', 'Successfully')
                        }

                        if (result.msg == 'exist') {
                            warning('Exist', `${categoryname} already exist!`);
                        }

                    },
                    error: function (err) {
                        errormsg(err);
                    }
                })
            }
        })

        $(document).on('click', '#activeBtn', function(){
            console.log(categorycode);
            console.log(status);
            $.ajax({
                    type: 'POST',
                    url: '/category/status',
                    data: {
                        status: status,
                        categorycode: categorycode,
                    },
                    success: function (result) {
                        if (result.msg == 'success') {
                            LoadTable();
                            success('Saved', 'Successfully')
                        }

                        if (result.msg == 'notexist') {
                            warning(`${categorycode} does not exist!`);
                        }

                    },
                    error: function (err) {
                        errormsg(err);
                    }
                })
        });

        $(document).on('click', '#inactiveBtn', function(){
            console.log(categorycode);
            console.log(status);
            $.ajax({
                    type: 'POST',
                    url: '/category/status',
                    data: {
                        status: status,
                        categorycode: categorycode,
                    },
                    success: function (result) {
                        if (result.msg == 'success') {
                            LoadTable();
                            success('Saved', 'Successfully')
                        }

                        if (result.msg == 'notexist') {
                            warning(`${categorycode} does not exist!`);
                        }

                    },
                    error: function (err) {
                        errormsg(err);
                    }
                })
        });

        function populateShiftTable(data) {
            console.log(data);
            const tableBody = $('#shift-dataTable tbody');
            tableBody.empty();

            if (data.length === 0) {
                const tr = $('<tr>').append($('<td>', {
                    colspan: 15,
                    class: 'text-center',
                    text: 'No Data Matched'
                }));
                tableBody.append(tr);
            } else {
                data.forEach(item => {
                    let action = '';
                    if (item.status === 'PENDING' || item.status === 'APPROVED') {
                        action = `<button id="printBtn" class="btn btn-outline-inventory shadow-sm w-100" name="printBtn">PRINT</button>`;
                    }

                    const tr = $('<tr>').append(
                        $('<td>', { text: item.date, 'data-label': 'Date', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.pos, 'data-label': 'POS', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.shift, 'data-label': 'Shift', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.cashier, 'data-label': 'Cashier', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.floating, 'data-label': 'Floating', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.cashfloat, 'data-label': 'Cash Float', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.salesbeginning, 'data-label': 'Sales Beginning', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.salesending, 'data-label': 'Sales Ending', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.totalsales, 'data-label': 'Total Sales', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.receiptbeginning, 'data-label': 'Receipt Beginning', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.receiptending, 'data-label': 'Receipt Ending', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.approvedby, 'data-label': 'Approved By', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.approveddate, 'data-label': 'Approved Date', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.status, 'data-label': 'Status', class: 'custom-mobile-align' }),
                        $('<td>', { html: action, 'data-label': 'Action', class: '' })
                    );

                    tableBody.append(tr);
                });
            }
        }

        function LoadTable() {
            $('#shift-dataTable').DataTable({
                'destroy': true,
                'processing': true,
                'serverSide': true,
                'paging': false,
                'searching': false,
                'info': false,
                'scrollCollapse': true,
                'serverMethod': 'GET',
                'ajax': {
                    'url': '/shiftreports/load',
                    'dataSrc': (json) => {
                        var finalData = [];
                        var data = json.data;

                        console.log(data);
                        $.each(data, (key, item) => {
                            var action = '';
                            var status = item.status;
                            console.log(data)

                            if (status == 'PENDING') {
                                action = '<button id="printBtn" class="btn btn-outline-inventory shadow-sm w-100" name="printBtn"">PRINT</button>'
                            }
                            if (status == 'APPROVED') {
                                action = '<button id="printBtn" class="btn btn-outline-inventory shadow-sm w-100" name="printBtn"">PRINT</button>'
                            }

                            finalData.push({
                                date: item.date,
                                pos: item.pos,
                                shift: item.shift,
                                cashier: item.cashier,
                                floating: item.floating,
                                cashfloat: item.cashfloat,
                                salesbeginning: item.salesbeginning,
                                salesending: item.salesending,
                                totalsales: item.totalsales,
                                receiptbeginning: item.receiptbeginning,
                                receiptending: item.receiptending,
                                status: item.status,
                                approvedby: item.approvedby,
                                approveddate: item.approveddate,
                                action: action,
                            })

                        })
 
                        return finalData;
                    },
                },
                error: function(error) {
                    console.error(error);
                }
            });

        }
        
    })
</script>