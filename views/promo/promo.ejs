              <th class="col-1">Condition</th>
              <th class="col-1">Start Date</th>
              <th class="col-1">End Date</th>
              <th class="col-1">Status</th>
              <th class="col-2">Created By</th>
              <th class="col-2">Created Date</th>
              <th class="col-2">Action</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
