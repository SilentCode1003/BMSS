<!-- Modal -->
<div
  class="modal fade"
  id="promoModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header custom-bg">
        <h5 class="modal-title" id="exampleModalLabel">Promo</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="custom-modal-body">
        <div class="card">
          <div class="card-header py-2 header-bg">
            <h6 class="m-0 font-weight-bold table-title">
              Update Promo Details:
            </h6>
          </div>
          <div class="card-body">
            <div class="row mb-2">
              <div class="col-md-12">
                <label class="form-label" for="promoidmodal">Promo ID</label>
                <input
                  id="promoidmodal"
                  name="promoidmodal"
                  type="text"
                  class="form-control"
                  aria-label="promoidmodal"
                  aria-describedby="basic-addon1"
                  disabled
                />
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-md-6">
                <label class="form-label" for="promonamemodal">Promo Name</label>
                <input
                  id="promonamemodal"
                  name="promonamemodal"
                  type="text"
                  class="form-control"
                  placeholder="Enter new discount name"
                  aria-label="promonamemodal"
                  aria-describedby="basic-addon1"
                />
              </div>
              <div class="col-md-6">
                <label class="form-label" for="mu_password">Description</label>
                <input
                  id="descriptionmodal"
                  name="descriptionmodal"
                  type="text"
                  class="form-control"
                  placeholder="Enter new Contact Person"
                  aria-label="fullname"
                  aria-describedby="basic-addon1"
                />
              </div>
            </div>
            <div class="row mb-2 justify-content-center">
              <div class="col-md-6">
                <label class="form-label" for="dtipermitmodal">DTI Permit</label>
                <input
                  id="dtipermitmodal"
                  name="dtipermitmodal"
                  type="number"
                  class="form-control"
                  placeholder="Enter new DTI Permit"
                  aria-label="dtipermitmodal"
                  aria-describedby="basic-addon1"
                />
              </div>
              <div class="col-md-6">
                <label class="form-label" for="coditionmodal">Condition</label>
                <input
                  id="coditionmodal"
                  name="coditionmodal"
                  type="number"
                  class="form-control"
                  placeholder="Enter new condition"
                  aria-label="coditionmodal"
                  aria-describedby="basic-addon1"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-outline-inventory"
          data-dismiss="modal"
        >
          Close
        </button>
        <button type="button" id="updateBtn" class="btn btn-outline-inventory">
          Update
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Begin PCreated by Content -->
