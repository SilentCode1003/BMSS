<!-- Modal -->
<div class="modal fade " id="productsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header custom-bg">
                <h5 class="modal-title" id="exampleModalLabel">Product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="custom-modal-body">
                <div class="card ">
                    <div class="card-header py-2 header-bg">
                        <h6 class="m-0 font-weight-bold table-title">Update Product: </h6>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2 justify-content-center">
                            <div class="col-md-6">
                                <label class="form-label">Product ID: </label>
                                <input autocomplete="off" id="productid" name="productid" type="text" class="form-control"aria-label="fullname" aria-describedby="basic-addon1" disabled>        
                            </div>
                        </div>
                        <div class="row mb-2 justify-content-center">
                            <div class="col-md-6">
                                <label class="form-label">Description: </label>
                                <input autocomplete="off" id="descriptionmodal" name="descriptionmodal" placeholder="Enter new description" type="text" class="form-control"aria-label="fullname" aria-describedby="basic-addon1">        
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Barcode: </label>
                                <input autocomplete="off" id="barcodemodal" name="barcodemodal" placeholder="Enter new Barcode" type="text" class="form-control"aria-label="fullname" aria-describedby="basic-addon1">        
                            </div>
                        </div>
                        <div class="row mb-2 justify-content-center">
                            <div class="col-md-6">
                                <label class="form-label">Cost: </label>
                                <input autocomplete="off" id="costmodal" name="costmodal" placeholder="Enter new cost" type="text" class="form-control"aria-label="fullname" aria-describedby="basic-addon1" oninput="formatPrice(event, this)">        
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input autocomplete="off" class="form-control text-center custom-input" placeholder="Select Category" name="categorymodal"
                                        id="categorymodal" />
                                    <input autocomplete="off" type="hidden" id="categorymodalID" name="categorymodalID" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">Select Category</span>
                                    </div>
                                </div>
                                <div class="custom-dropdown cdw-tableoption" id="categorymodalDropdown"></div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <label class="form-label">Product Image:</label>
                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <input autocomplete="off"
                                            class="btn btn-outline-inventory -sm w-100"
                                            type="file"
                                            id="imageInputModal"
                                            placeholder="Select Image"
                                        />
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="text-center">
                                    <img
                                    id="productimagemodal"
                                    src="/images/img/asvesti.png"
                                    class="img-thumbnail"
                                    alt="..."
                                />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="closeBtn" class="btn btn-outline-inventory" data-dismiss="modal">Close</button>
                <button type="button" id="updateBtn" class="btn btn-outline-inventory">
                    <span id="btn-label-modal">Update</span>
                    <span id="btnSpinner-modal" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Begin PCreated by Content -->
<div class="container-fluid">
    <!-- Content Row -->
    <div class="toggle-view">
        <div class="row mb-2">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header py-3 header-bg">
                        <h6 class="m-0 font-weight-bold">Products</h6>
                    </div>
                    <div class="card-body extend">
                        <div class="row mb-2">
                            <div class="col-md-6 mmb">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">Description</span>
                                    </div>
                                    <input autocomplete="off" id="description" name="description" type="text" class="form-control" placeholder="Enter Description" aria-label="fullname" aria-describedby="basic-addon1">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input autocomplete="off" class="form-control text-center custom-input" placeholder="Select Category" name="category"
                                        id="category" />
                                    <input autocomplete="off" type="hidden" id="categoryID" name="categoryID" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">Select Category</span>
                                    </div>
                                </div>
                                <div class="custom-dropdown cdw-tableoption" id="categoryDropdown"></div>
                            </div>
                        </div>
                        
                        <div class="row mb-2">
                            <div class="col-md-6 mmb">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">Price</span>
                                    </div>
                                    <input autocomplete="off" id="price" name="price" value="" type="text" class="form-control" placeholder="Enter Product Price" aria-label="employeeid" aria-describedby="basic-addon1" oninput="formatPrice(event, this)">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">Barcode</span>
                                    </div>
                                    <input autocomplete="off" id="barcode" name="barcode" type="text" class="form-control" placeholder="Enter Barcode" aria-label="fullname" aria-describedby="basic-addon1">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2 justify-content-center">
                            <div class="col-md-6 d-flex">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2">Cost</span>
                                    </div>
                                    <input autocomplete="off" id="cost" name="cost" type="text" class="form-control" placeholder="Enter Cost" aria-label="cost" aria-describedby="basic-addon1" oninput="formatPrice(event, this)">
                                </div>
                                
                                <!-- <span class="mt-2 ml-2">
                                    <i class="fas fa-question-circle"></i>
                                </span> -->
                                <div class="tooltip-container mt-1 ml-2">
                                    <i class="fas fa-question-circle"></i>
                                    <span class="tooltip">Total Cost of the Product. Can be empty if the product is made through Production.</span>
                                    <span class="text"></span>
                                  </div>
                            </div>
                        </div>
    
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <input autocomplete="off"
                                            class="btn btn-outline-inventory w-100"
                                            type="file"
                                            id="imageInput"
                                            placeholder="Select Image"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="align-img">
                                    <img
                                    id="productimage"
                                    src="/images/img/asvesti.png"
                                    class="img-thumbnail "
                                    alt="..."
                                />
                                </div>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-end">
                            <div class="col-md-2 align mt-2">
                                <button id="addBtn" name="addBtn" class="btn btn-sm btn-outline-inventory w-100">
                                    <span id="btnIcon"><i class="fa fa-plus" aria-hidden="true"></i> Add</span>
                                    <span id="btnSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </div>      
                </div>
            </div>
        </div>
    </div>

